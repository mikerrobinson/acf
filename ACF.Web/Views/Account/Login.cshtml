@model ACF.Web.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
}

@section styles {
    <link rel="stylesheet" href="/assets/css/pages/page_log_reg_v1.css">
}

@section breadcrumbs {
    <div class="breadcrumbs margin-bottom-40">
        <div class="container">
            <h1 class="pull-left">Log In</h1>
        </div>
    </div><!--/breadcrumbs-->
}

<div class="row">
    <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "reg-page" }))
        {
            <div class="reg-header">
                <h2>Login to your account</h2>
                <p>Don't have one yet?  @Html.ActionLink("Click here", "Register", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" }) to register.</p>
            </div>

            @Html.AntiForgeryToken()
            @Html.ValidationSummary()

            <div class="form-group input-group">
                <span class="input-group-addon"><i class="icon-envelope"></i></span>
                @Html.TextBoxFor(m => m.UserName, new { @type = "email", @class = "form-control", placeholder = "Email" })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>

            <div class="form-group input-group">
                <span class="input-group-addon"><i class="icon-lock"></i></span>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>

            <div class="row">
                <div class="col-md-6 form-group">
                    <label class="checkbox">@Html.CheckBoxFor(m => m.RememberMe) Remember me</label>
                </div>
                <div class="col-md-6">
                    <button class="btn-u pull-right" type="submit">Login</button>
                </div>
            </div>

            <hr>

        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}