@using Microsoft.AspNet.Identity
@using ACF.Web.Extensions

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()
    }
    
    
    <li class="dropdown">
        <a href="#" id="userDropdown" class="dropdown-toggle" data-toggle="dropdown">
        <i class="glyphicon glyphicon-user"></i> @User.Identity.GetDisplayName() <b class="icon-angle-down"></b></a>
        <ul class="dropdown-menu" role="menu" aria-labelledby="userDropdown" >
            <li>
                @Html.ActionLink("Manage Profile", "Manage", "Account", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li>
                <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
            </li>
        </ul>
    </li>
}
else
{
    <li>@Html.ActionLink("Subscribe", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
    <li class="devider"></li>
    <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
}
